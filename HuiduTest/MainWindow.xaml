<Window x:Class="HuiduTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Huidu LED Controller"
        Height="720" Width="1200"
        Background="#F8F8F8">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT: Log + Device list -->
        <StackPanel Grid.Column="0" Margin="10">
            <GroupBox Header="Connected Controllers" FontWeight="Bold" Margin="0,0,0,10">
                <ListBox x:Name="DeviceList"
                         Height="150"
                         SelectionChanged="DeviceList_SelectionChanged"/>
            </GroupBox>

            <GroupBox Header="Log" FontWeight="Bold">
                <ListBox x:Name="LogList"
                         Height="480"
                         Background="Black"
                         Foreground="Lime"
                         FontFamily="Consolas"/>
            </GroupBox>
        </StackPanel>

        <!-- RIGHT: Controls -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Text Message" FontWeight="Bold" FontSize="18"/>
            <TextBox x:Name="TextInput"
                     Height="80"
                     FontSize="24"
                     Margin="0,6,0,10"
                     Text="채문호"/>

            <Button x:Name="SendTextBtn" Content="Send Text"
                    Height="40" Width="200" Margin="0,0,0,10"
                    Click="SendTextBtn_Click"/>

            <Separator Margin="0,10,0,10"/>

            <TextBlock Text="Image File" FontWeight="Bold" FontSize="18"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                <Button x:Name="SelectImageBtn" Content="Select Image"
                        Click="SelectImageBtn_Click" Width="150"/>
                <TextBlock x:Name="SelectedImagePath" Margin="10,4,0,0"/>
            </StackPanel>

            <Button x:Name="SendImageBtn" Content="Send Image"
                    Height="40" Width="200" Margin="0,10,0,0"
                    Click="SendImageBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>

